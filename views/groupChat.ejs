
<%- include('parts/navbar')%>
<title><%= group.groupName %></title>

<div class="row chat">
    <input type="hidden" id="groupId" value="<%= group._id%>">
    <div class="col col-12 col-md-3 side">
        <img src="/default-user-image.png>" style="width: 100px"> <br>
        <h3 style="color: #fff"><%= group.groupName%></h3>
        <br>
        <div style="text-align: left; padding-left: 15px">
            <% for (let friend of friends) { %>
                <h4>
                    <img src="/<%= friend.image%>" style="width: 50px; display: inline-block;">
                    <a href="/profile/<%= friend.id%>"><%= friend.username%></a>
                </h4>    
            <% } %>
              <button class="btn btn-success" id="callBtn">Video Call</button>
        </div>
    </div>
    <div class="col col-12 col-md-9 messages">

        <div id="messages-container">
           
        </div>
        <div class="messages-form">
            <textarea id="message"></textarea>
            <button id="sendBtn" class="btn btn-success">Send</button>
        </div>
    </div>
</div>

<%- include('parts/scripts') %>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/sockets/init.js"></script>
<script src="/js/sockets/groups.js"></script>
<script src="/js/sockets/groupChat.js"></script>

</body>
</html>