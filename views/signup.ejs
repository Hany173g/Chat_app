<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || "إنشاء حساب" %></title>
    <link rel="stylesheet" href="<%= stylesheet %>" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="/logo.png">
  </head>

  <body>
        <%- include('parts/navbar') %>
    <div class="container mt-5">
      <div class="signup-card bg-white shadow p-4 rounded-3">
        <h2 class="text-center mb-4">إنشاء حساب جديد</h2>

        <form action="/signup" method="POST" class="row g-3">
          <div class="col-md-12">
            <label for="fullName" class="form-label">الاسم الكامل</label>
            <input type="text" class="form-control" id="fullName" name="username">
            <% for (let err of validationErrors) { %>
              <% if (err.msg === 'Username is requird') { %>
                <p class="alert alert-danger"><%= err.msg %></p>
              <% } %>
            <% } %>
          </div>

          <div class="col-12">
            <label for="email" class="form-label">البريد الإلكتروني</label>
            <input type="text" class="form-control" id="email" name="email">
            <% for (let err of validationErrors) { %>
              <% if (err.msg === 'Email is invalid') { %>
                <p class="alert alert-danger"><%= err.msg %></p>
              <% } %>
            <% } %>
          </div>

          <div class="col-12">
            <label for="password" class="form-label">كلمة المرور</label>
            <input type="password" class="form-control" id="password" name="password">
            <% for (let err of validationErrors) { %>
              <% if (err.msg === 'Password must be at least 6 characters') { %>
                <p class="alert alert-danger"><%= err.msg %></p>
                <% break %>
              <% } %>
            <% } %>
          </div>

          <div class="col-12 text-center">
            <button type="submit" class="btn btn-success w-100">تسجيل</button>
          </div>
        </form>

        <% if (authError) { %>
          <p class="alert alert-danger mt-3"><%= authError %></p>
        <% } %>

        <div class="text-center mt-3">
          <span>عندك حساب؟ <a href="/login">سجّل الدخول</a></span>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
