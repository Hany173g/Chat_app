<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || "تسجيل الدخول" %></title>
    <link rel="stylesheet" href="<%= stylesheet %>" />
    <link rel="icon" type="image/png" href="/logo.png">
    <!-- Bootstrap RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
  </head>

  <body>
        <%- include('parts/navbar') %>

    <div class="container mt-5">
      <div class="signin-card bg-white shadow p-4 rounded-3 mx-auto" style="max-width: 500px;">
        <h2 class="text-center mb-4">تسجيل الدخول</h2>

        <form action="/login" method="POST" class="row g-3">
          <div class="col-12">
            <label for="email" class="form-label">البريد الإلكتروني</label>
            <input type="text" class="form-control" id="email" name="email"  placeholder="example@email.com">
            <% let emailError = errorLogin.find(e => e.msg === 'Email is invaliad') %>
            <% if (emailError) {%>
              <p class="alert alert-danger"><%= emailError.msg %></p>
            <% } %>
          </div>
          

          <div class="col-12">
            <label for="password" class="form-label">كلمة المرور</label>
            <input type="password" class="form-control" id="password" name="password"  placeholder="********">
              <% let passError = errorLogin.find(e => e.msg === 'Password must be at least 6 characters'); %>
              <% if (passError) { %>
                <p class="alert alert-danger"><%= passError.msg %></p>
              <% } %>

          </div>

          <div class="col-12 d-flex justify-content-between align-items-center">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="remember" name="remember">
              <label class="form-check-label" for="remember">تذكرني</label>
            </div>
            <a href="/forgot-password" class="text-decoration-none">نسيت كلمة المرور؟</a>
          </div>

          <div class="col-12">
            <button type="submit" class="btn btn-primary w-100">دخول</button>
          </div>
        </form>
        <br>
        <br>
        <div class="text-center mt-3">
          <span>ما عندكش حساب؟ <a href="/signup">سجّل حساب جديد</a></span>
        </div>
      </div>
    </div>

    

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
